<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewProductActivity">

    <EditText
        android:id="@+id/product_id"
        android:layout_width="@dimen/_280sdp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:hint="Product Barcode"
        android:inputType="number"
        />

    <EditText
        android:id="@+id/product_name"
        android:layout_width="@dimen/_280sdp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_below="@id/product_id"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:hint="Product Name"
        />

    <ImageView
        android:id="@+id/produt_image"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@id/product_name"
        android:background="#000000"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload"
        android:id="@+id/upload"
        android:layout_below="@id/produt_image"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="#ffffff"
        android:background="@drawable/addtocart_background"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/product_description"
        android:layout_width="@dimen/_280sdp"
        android:layout_below="@id/upload"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_12sdp"
        android:layout_marginTop="10dp"
        android:minLines="5"
        android:hint="Product Description"
        />

    <TextView
        android:id="@+id/item_price_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_description"
        android:text="Rs."
        android:textColor="#2e821d"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/_20sdp"
        android:textSize="@dimen/_25sdp"
        />

    <EditText
        android:id="@+id/product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_description"
        android:text="500"
        android:maxLength="6"
        android:textColor="#2e821d"
        android:textStyle="bold"
        android:layout_toRightOf="@id/item_price_label"
        android:layout_marginLeft="@dimen/_10sdp"
        android:textSize="@dimen/_25sdp"
        android:inputType="number"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_description"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp">
    <ImageView
        android:id="@+id/item_delete"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:src="@drawable/remove_item"
        />
    <TextView
        android:id="@+id/item_count"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:text="0"
        android:textSize="@dimen/_25sdp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:src="@drawable/add_item"
        android:gravity="center" />

        <ImageView
            android:id="@+id/item_add"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:src="@drawable/add_item"
            android:layout_toRightOf="@id/item_count"/>

    </LinearLayout>

    <Spinner
        android:id="@+id/category_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/product_price"
        android:entries="@array/categories"
        android:padding="@dimen/_15sdp"
        android:background="@android:drawable/dialog_holo_light_frame"
        />

    <Button
        android:id="@+id/addtostock_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_below="@id/category_selector"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/addtocart_background"
        android:textColor="#ffffff"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingRight="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        />


</RelativeLayout>
</ScrollView>